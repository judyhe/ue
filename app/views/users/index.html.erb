<h1><%= @users.size %> users </h1>

<p><%= link_to 'New User', new_user_path %></p>

<table cellspacing="0" cellpadding="0" border="0" class="index">
	<thead>
		<tr>
		  <th>Login</th>
			<th>Email</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Phone</th>
			<th>Title</th>
			<th>Role</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
		  <td><%= link_to user.username, edit_user_path(user) %>
			<td><%= user.email %></td>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= user.phone %></td>
			<td><%= user.title %></td>
			<td><%= user.role %></td>
		</tr>
		<% end %>
	</tbody>
</table>