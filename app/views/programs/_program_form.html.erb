<% form_for(program, :html => {:class => "default"}) do |f| %>
  <%= f.error_messages %>

	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	
	<div>
		<%= f.label :description %>
		<%= f.text_area :description, :rows => 4, :cols => 60 %>
	</div>
	
	<div>
		<%= f.label :organization_id %>
		<%= f.collection_select :organization_id, Organization.alphabetical, :id, :name, {:include_blank => true} %>
	</div>
	
  <p>
    <%= f.submit %>
  </p>
<% end %>
