<div id="content_main">
	<div class="clearfix">
		<div class="heading">
			<h1><%= @program.name %></h1> 
			<h3><%= @program.description %></h3>
		</div>
		
		<div class="nav_model_util">
			<%= link_to 'Edit Program', edit_program_path(@program) %>
			<a href="#">New Term</a>
			<%= link_to 'New Staffer', new_organization_staff_path %>
		</div>
	</div>
	
	<h2>Terms</h2>
	
	<h2>Staffers (<%= @program.organization_staffs.size %>)</h2>
	<ul>
		<% @program.organization_staffs.each do |staff| %>
		<li><%= link_to staff.name, organization_staff_path(staff) %> - <%= staff.position %></li>
		<% end %>
	</ul>

	<p><%= link_to 'Back', program_path %></p>
</div>

<div id="content_secondary">

	<table cellpadding="0" cellspacing="0" border="0" class="info">
		<tr>
			<th>Gender:</th>
			<td><%= @program.gender %></td>
		</tr>
		<tr>
			<th>Ages:</th>
			<td><%= @program.ages_list %>
		</tr>
		<tr>
			<th>Activities:</th>
			<td><%= @program.activities_list %></td>
		</tr>
	</table>

	<%= render :partial => "shared/manage_assets", :locals => {:local_model => @program} %>

	<%= render :partial => "shared/manage_comments", :locals => {:local_model => @program} %>
</div>

<%= javascript_include_tag "application" %>