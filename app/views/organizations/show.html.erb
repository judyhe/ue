<div id="content_main">
	<div class="clearfix">
		<h1><%= @organization.name %></h1> 
		
		<div class="nav_model_util">
			<%= link_to 'Edit Organization', edit_organization_path(@organization) %>
			<a href="#">New Program</a>
			<a href="#">New Staffer</a>
		</div>
	</div>
	
	<h2>Programs</h2>
	
	<h2>Staffers</h2>

	<p><%= link_to 'Back', organization_path %></p>
</div>

<div id="content_secondary">

	<table cellpadding="0" cellspacing="0" border="0" class="info">
		<tr>
			<th>Description:</th>
			<td><%= @organization.description %></th>
		</tr>
		<% @organization.contact_numbers.each do |number| %>
			<tr>
				<th><%= number.name %>:</th> 
				<td><%= number.number %></td>
			</tr>
		<% end %>
		<tr>
			<th>Email:</th>
			<td><%= @organization.email %></td>
		</tr>
		<tr>
			<th>Url:</th>
			<td><%= @organization.url %></td>
		</tr>
		<tr>
			<th>Address:</th>
			<td><address><%= address(@organization.address) %></address></td>
		</tr>
	</table>

	<%= render :partial => "shared/manage_assets", :locals => {:local_model => @organization} %>

	<%= render :partial => "shared/manage_comments", :locals => {:local_model => @organization} %>
</div>

<%= javascript_include_tag "application" %>