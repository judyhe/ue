<h1>
	<%= @organizations.size %> organizations
</h1>

<p><%= link_to "New Organization", new_organization_path %></p>

<table cellspacing="0" cellpadding="0" border="0" class="index">
	<thead>
  <tr>
		<th>Name</th>
		<th>Description</th>
		<th>Url</th>
		<% if can? :destroy, @organizations %><th>Delete</th><% end %>
  </tr>
	</thead>
	<tbody>
	<% @organizations.each do |org| %>
	  <tr>
			<td><%= link_to org.name, org %></td>
			<td><%= org.description %></td>
			<td><%= org.url %></td>
      <% if can? :destroy, org %><td><%= link_to 'X', org, :method => :delete, :confirm => 'Are you sure?' %></td><% end %>			
	  </tr>
	<% end %>
	</tbody>
</table>
