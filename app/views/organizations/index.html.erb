<h1>
	<%= @organizations.size %> 
	<%= correctly_pluralized_noun(@organizations.size, "organization") %> 
	<%= link_to "new", new_organization_path %>
</h1>


<table cellspacing="0" cellpadding="0" border="0" class="index">
	<thead>
  <tr>
		<th>Name</th>
		<th>Url</th>
  </tr>
	</thead>
	<tbody>
	<% @organizations.each do |org| %>
	  <tr>
			<td><%= link_to org.name, org %></td>
			<td><%= org.url %></td>
	  </tr>
	<% end %>
	</tbody>
</table>
