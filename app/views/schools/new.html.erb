<h1>
	<%= form_title %>
</h1>

<% form_for(@school, :html => {:multipart => true, :class => "default"}) do |f| %>
  <%= f.error_messages %>
	
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	
	<%= render :partial => "students/address_fields", :locals => {:f => f}%>
	
	<div>		
		<%= f.label :avatar, "Photo" %>
		<%= f.file_field :avatar %>
	</div>

  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

<%= link_to 'Back', schools_path %>