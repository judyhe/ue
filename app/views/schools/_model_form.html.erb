<% form_for(school, :html => {:multipart => true, :class => "default"}) do |f| %>
  <%= f.error_messages %>
	
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	
	<div>		
		<%= f.label :avatar, "Photo" %>
		<%= image_tag(school.avatar.url(:thumb), :class => "float_left") %>
		<%= f.file_field :avatar %>
	</div>
	
	<%= render :partial => "people/address_fields", :locals => {:f => f, :extended => true}%>

  <p>
    <%= f.submit %>
  </p>
<% end %>

