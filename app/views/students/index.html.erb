<h1>
	<%= @students.size %> 
	<%= correctly_pluralized_noun(@students.size, "student") %> 
</h1>
<p><%= link_to "export csv", :controller => "students", :action => "index", :format => :csv %></p>
<p><%= link_to "New Student", new_student_path %></p>

<table cellspacing="0" cellpadding="0" border="0" class="index">
	<thead>
	  <tr>
			<th>&nbsp;</th>
			<th>Name</th>
			<th>Email</th>
			<th>Age</th>
			<th>Grade</th>
			<th>Gender</th>
			<th>Ethnicity</th>
			<th>School</th>
	  </tr>
	</thead>
	<tbody>

	<% @students.each do |student| %>
	  <tr>
			<td><%= image_tag student.person.avatar.url(:thumb) %></td>
			<td><%= link_to student.name, student %></td>
			<td><%= student.person.email %></td>
			<td><%= student.age %></td>
			<td><%= associated_attribute(student.grade, :name) %>
			<td><%= student.gender %></td>
			<td><%= associated_attribute(student.ethnicity, :name) %>	
			<td><%= link_to student.school.name, school_path(student.school_id) if student.school %></td>
	    <!--<td><%= link_to 'Edit', edit_student_path(student) %></td>-->
	  </tr>
	<% end %>
	</tbody>
</table>


<p><%= link_to "New Student", new_student_path %></p>
