<h1>
  <%= @students.size %> students
</h1>
<p><%= link_to "export csv", :controller => "students", :action => "index", :format => :csv %></p>
<p><%= link_to "New Student", new_student_path %></p>

<table cellspacing="0" cellpadding="0" border="0" class="index">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Grade</th>
      <th>Gender</th>
      <th>Ethnicity</th>
      <th>School</th>
      <% if can? :destroy, @students %><th>Delete</th><% end %>
    </tr>
  </thead>
  <tbody>

    <% @students.each do |student| %>
    <tr>
      <td><%= image_tag student.person.avatar.thumb.url %></td>
      <td><%= link_to student.name, student %></td>
      <td><%= student.person.email %></td>
      <td><%= student.age %></td>
      <td><%= student.grade_name %>
      <td><%= student.gender %></td>
      <td><%= student.ethnicity_name %>	
      <td><%= link_to student.school.name, school_path(student.school_id) if student.school %></td>
      <% if can? :destroy, student %><td><%= link_to 'X', student, :method => :delete, :confirm => 'Are you sure?' %></td><% end %>
    </tr>
    <% end %>
  </tbody>
</table>


<p><%= link_to "New Student", new_student_path %></p>
